<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
        "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>


    <bean id="springApplicationContext" class="com.example.accessingdatajpa.SpringApplicationContext"/>


    <bean id="addressBook" class="com.example.accessingdatajpa.AddressBook">
    </bean>


    <bean id="controller" class="com.example.accessingdatajpa.Controller">
        <property name="AddressBook">
            <ref bean="addressBook"/>
        </property>
        <property name="View">
            <ref bean="mainFrame"/>
        </property>
    </bean>


    <bean id="mainFrame" class="com.example.accessingdatajpa.View" init-method="init">
        <property name="contentPane">
            <ref bean="border"/>
        </property>
        <property name="title">
            <value>AddressBook</value>
        </property>
        <property name="firstnameTextField">
            <ref bean="firstnameTextField"/>
        </property>
        <property name="lastnameTextField">
            <ref bean="lastnameTextField"/>
        </property>
        <property name="phoneTextField">
            <ref bean="phoneTextField"/>
        </property>
        <property name="addressBookDropDown">
            <ref bean="comboBox"/>
        </property>
        <property name="submit">
            <ref bean="addButton"/>
        </property>
    </bean>


    <bean id="border" class=
            "com.example.accessingdatajpa.GridLayoutPanel" init-method="init">
        <property name="height">
            <value>2</value>
        </property>
        <property name="width">
            <value>1</value>
        </property>
        <property name="panelComponents">
            <list>
                <ref bean="center"/>
                <ref bean="addressBookDisplay"/>
            </list>
        </property>
    </bean>

    <bean id="center" class=
            "com.example.accessingdatajpa.GridLayoutPanel" init-method="init">
        <property name="height">
            <value>2</value>
        </property>
        <property name="width">
            <value>2</value>
        </property>
        <property name="panelComponents">
            <list>
                    <ref bean="textPanel"/>
                    <ref bean="addButton"/>
            </list>
        </property>
    </bean>

    <bean id="textPanel" class=
            "com.example.accessingdatajpa.GridLayoutPanel" init-method="init">
        <property name="height">

            <value>4</value>
        </property>
        <property name="width">

            <value>2</value>
        </property>
        <property name="panelComponents">
            <list>
                <ref bean="firstnameLabel"/>
                <ref bean="firstnameTextField"/>
                <ref bean="lastnameLabel"/>
                <ref bean="lastnameTextField"/>
                <ref bean="phoneLabel"/>
                <ref bean="phoneTextField"/>
            </list>
        </property>
    </bean>

    <bean id="addressBookDisplay" class=
            "com.example.accessingdatajpa.GridLayoutPanel" init-method="init">
        <property name="height">

            <value>2</value>
        </property>
        <property name="width">

            <value>1</value>
        </property>
        <property name="panelComponents">
            <list>
                <ref bean="contactListLabel"/>
                <ref bean="comboBox"/>
            </list>
        </property>
    </bean>



    <bean id="firstnameLabel" class="com.example.accessingdatajpa.label">
        <property name="text">
            <value>FirstName</value>
        </property>
    </bean>
    <bean id="contactListLabel" class="com.example.accessingdatajpa.label">
        <property name="text">
            <value>Contact List</value>
        </property>
    </bean>
    <bean id="lastnameLabel" class="com.example.accessingdatajpa.label">
        <property name="text">
            <value>LastName</value>
        </property>
    </bean>
    <bean id="phoneLabel" class="com.example.accessingdatajpa.label">
        <property name="text">
            <value>Phone</value>
        </property>
    </bean>
    <bean id="firstnameTextField" class="com.example.accessingdatajpa.text">
        <property name="text">
            <value></value>
        </property>
    </bean>
    <bean id="lastnameTextField" class="com.example.accessingdatajpa.text">
        <property name="text">
            <value></value>
        </property>
    </bean>
    <bean id="phoneTextField" class="com.example.accessingdatajpa.text">
        <property name="text">
            <value></value>
        </property>
    </bean>

    <bean id="comboBox" class="com.example.accessingdatajpa.comboBox">

    </bean>

    <bean id="addButton" class="com.example.accessingdatajpa.ActionListenerButton"
          init-method="init">
        <property name="actionListener">
            <ref bean="ButtonListener"/>
        </property>
        <property name="text">
            <value>Add Contact</value>
        </property>
    </bean>


    <bean id="buttonPanel" class="com.example.accessingdatajpa.BoxLayoutPanel" init-method="init">
        <property name="axis">
            <value>0</value>
        </property>
        <property name="panelComponents">
            <list>

            </list>
        </property>
    </bean>


    <bean id="ButtonListener"
          class="com.example.accessingdatajpa.ButtonListener">
    </bean>
</beans>